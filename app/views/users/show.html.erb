<h1><%= @user.full_name %></h1>

<div class="card-wrapper">
    <% current_user.plants.each do |p| %>
      <div class="card">
        <%= p.common_name %><br>
        <%= p.scientific_name %><br>
        <% if !p.photo.nil?%>
          <a href=<%= p.photo%>>See Photo</a>
        <%end%>
         <%= show_instructions(p)%>
         <%= link_to "Add instructions", new_user_plant_plants_user_path(@user.id, p.id), class: "card-button" %><br><br>
         <%= render '/status', {:plantsuser => p.id, :user => @user} %>
         </div>
      <%end%><br>
      
</div>